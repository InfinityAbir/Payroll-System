@using Microsoft.AspNetCore.Identity
@using PayrollSystem.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Payroll System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f4f6fc;
            display: flex;
            min-height: 100vh;
            margin: 0;
            transition: padding-left 0.3s ease;
        }

        .sidebar {
            width: 220px;
            background: linear-gradient(180deg, #667eea, #764ba2);
            color: #fff;
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            bottom: 0;
            padding-top: 1.5rem;
            transition: transform 0.3s ease;
            z-index: 1000;
        }

            .sidebar h3 {
                text-align: center;
                font-weight: 700;
                margin-bottom: 2rem;
                letter-spacing: 1px;
                text-transform: uppercase;
                color: #fff;
                cursor: pointer;
            }

            .sidebar a {
                color: #fff;
                padding: 0.75rem 1.2rem;
                text-decoration: none;
                display: flex;
                align-items: center;
                gap: 0.5rem;
                border-radius: 0.5rem;
                margin: 0.2rem 0;
                transition: all 0.3s ease;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background: rgba(255,255,255,0.15);
                    transform: translateX(5px);
                    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
                }

        .main-content {
            margin-left: 220px;
            padding: 2rem;
            flex: 1;
            transition: margin-left 0.3s ease;
        }

        footer {
            margin-top: auto;
            padding: 1rem;
            text-align: center;
            background-color: #fff;
            color: #667eea;
            border-top: 1px solid #ddd;
            box-shadow: 0 -3px 8px rgba(0,0,0,0.05);
        }

        .sidebar form button {
            border-radius: 0.5rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .sidebar form button:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        .sidebar.hidden {
            transform: translateX(-250px);
        }

        @@media(max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: fixed;
                transform: translateY(0);
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <!-- Title goes Home -->
        <h3 onclick="window.location.href='@Url.Action("Index", "Home")'">
            Payroll System
        </h3>

        @if (SignInManager.IsSignedIn(User))
        {
            var me = await UserManager.GetUserAsync(User);
            var roles = me != null ? await UserManager.GetRolesAsync(me) : new List<string>();
            bool isAdmin = roles.Contains("Admin");

            <!-- Home -->
            <a asp-controller="Home" asp-action="Index"
               class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i> Home
            </a>

            <!-- Dashboard (same as Home for now) -->
            <a asp-controller="Home" asp-action="Index"
               class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>

            @if (isAdmin)
            {
                <a asp-controller="Employees" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" ? "active" : "")">
                    <i class="bi bi-people-fill"></i> Employees
                </a>

                <a asp-controller="Attendances" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Attendances" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-calendar-check-fill"></i> Attendances
                </a>

                <a asp-controller="Payrolls" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Payrolls" ? "active" : "")">
                    <i class="bi bi-cash-stack"></i> Payrolls
                </a>
            }
            else
            {
                <a asp-controller="Payrolls" asp-action="Details"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Payrolls" ? "active" : "")">
                    <i class="bi bi-cash-stack"></i> My Payroll
                </a>

                <!-- Employee-only view of their own attendance -->
                <a asp-controller="Attendances" asp-action="My"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Attendances" && ViewContext.RouteData.Values["Action"]?.ToString() == "My" ? "active" : "")">
                    <i class="bi bi-calendar-check-fill"></i> My Attendance
                </a>
            }

            <form method="post" asp-controller="Account" asp-action="Logout" class="mt-auto p-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger w-100">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
            <a asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus"></i> Register
            </a>
        }
    </div>

    <div class="main-content" id="mainContent">
        @RenderBody()

        <footer>
            &copy; @DateTime.Now.Year Payroll System. All rights reserved.
        </footer>
    </div>

    <script>
        let lastScrollTop = 0;
        const sidebar = document.getElementById('sidebar');

        window.addEventListener('scroll', function () {
            let st = window.pageYOffset || document.documentElement.scrollTop;
            if (st > lastScrollTop && st > 100) {
                sidebar.classList.add('hidden');
            } else {
                sidebar.classList.remove('hidden');
            }
            lastScrollTop = st <= 0 ? 0 : st;
        }, false);
    </script>
</body>
</html>
